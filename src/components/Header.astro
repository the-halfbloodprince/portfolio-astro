---
import {MenuIcon} from '@heroicons/react/solid'
const title = 'Manish'
---

<header class="w-full py-4 flex items-center max-w-6xl mx-auto justify-center px-10 md:px-0 lg:px-0">
    <div class="flex flex-1">
        <img class="w-64" src="/assets/myLogo.svg" alt="">
    </div>
    <div class="w-10 mx-3 lg:hidden"> <MenuIcon /> </div>
    <div class="flex space-x-6 mx-3 hidden lg:block relative">
        <a href="" class="text-gray-400 relative animated-underline-effect hover:text-white transition-all duration-300">Projects</a>
        <a href="" class="text-gray-400 relative animated-underline-effect hover:text-white transition-all duration-300">Experiences</a>
        <a href="" class="text-gray-400 relative animated-underline-effect hover:text-white transition-all duration-300">Resume</a>
        <a href="" class="text-gray-400 relative animated-underline-effect hover:text-white transition-all duration-300">Experiments</a>
        <a href="" class="text-gray-400 relative animated-underline-effect hover:text-white transition-all duration-300">Contact Me</a>
    </div>
</header>


<style>
    .animated-underline-effect::after {
        content: '';
        width: 100%;
        height: 3px;
        /* background-color: white; */
        background-color: #0644FD;
        position: absolute;
        bottom: -10px;
        left: 0;
        transform: scaleX(0);
        transition: transform .5s ease;
    }

    .animated-underline-effect:hover::after {
        transform: scaleX(1);
    }


</style>
